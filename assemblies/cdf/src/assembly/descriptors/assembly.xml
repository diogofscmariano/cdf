<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
  <id>pentaho-cdf</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>

  <fileSets>
    <fileSet>
      <directory>${basedir}/target/${project.artifactId}-${project.version}-js/cdf</directory>
      <outputDirectory>/pentaho-cdf</outputDirectory>
      <excludes>
        <exclude>cdf-require-js-cfg.js</exclude>
      </excludes>
    </fileSet>

    <fileSet>
      <directory>${basedir}/target/classes</directory>
      <outputDirectory>/pentaho-cdf</outputDirectory>
    </fileSet>
  </fileSets>

  <files>
    <file>
      <source>${basedir}/target/cdf-require-js-cfg.js</source>
      <destName>/pentaho-cdf/js/cdf-require-js-cfg.js</destName>
    </file>
  </files>

  <dependencySets>
    <dependencySet>
      <outputDirectory>/pentaho-cdf/lib</outputDirectory>
      <scope>runtime</scope>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <excludes>
        <exclude>*:zip</exclude>
        <exclude>*:*:js</exclude>
      </excludes>
    </dependencySet>
  </dependencySets>

</assembly>
