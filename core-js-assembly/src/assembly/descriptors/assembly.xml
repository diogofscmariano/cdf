<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
  <id>cdf</id>
  <formats>
    <format>zip</format>
  </formats>

  <includeBaseDirectory>false</includeBaseDirectory>

  <fileSets>
    <!-- cdf legacy assembly -->
    <fileSet>
      <directory>${basedir}/../core/src/main/javascript/cdf-legacy</directory>
      <outputDirectory>cdf/cdf-legacy</outputDirectory>
    </fileSet>

    <!-- cdf assembly -->
    <fileSet>
      <directory>${basedir}/../core/src/main/javascript/cdf</directory>
      <outputDirectory>cdf/cdf</outputDirectory>
    </fileSet>

    <!-- cdf lib -->
    <fileSet>
      <directory>${basedir}/../core/src/main/javascript/lib</directory>
      <outputDirectory>cdf/lib</outputDirectory>
    </fileSet>
  </fileSets>

  <files>
    <file>
      <source>${basedir}/target/cdf-core-require-js-cfg.js</source>
      <destName>cdf/cdf-core-require-js-cfg.js</destName>
    </file>
  </files>

</assembly>
